<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pontes_stefane_esig.myapplication.activities.ProjectFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_project_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nom" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Début"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_start_date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="date" />

            <Button
                android:id="@+id/bt_start_date"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="SELECT DATE" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_start_time"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="time" />

            <Button
                android:id="@+id/bt_start_time"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="SELECT TIME" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Fin"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_end_date"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="date" />

            <Button
                android:id="@+id/bt_end_date"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="SELECT DATE" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_end_time"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:inputType="time"/>

            <Button
                android:id="@+id/bt_end_time"
                android:layout_width="185dp"
                android:layout_height="wrap_content"
                android:text="SELECT TIME" />

        </LinearLayout>

        <Button
            android:id="@+id/bt_project_form_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="projectSubmit"
            android:text="Créer Project" />

    </LinearLayout>

</ScrollView>
